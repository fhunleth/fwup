#!/bin/sh

#
# Test generating the size of a file resource
#

. ./common.sh

export ACTUAL_SIZE_FILE=$WORK/actual_size.txt
export EXPECTED_SIZE_FILE=$WORK/expected_size.txt

cat >$EXPECTED_SIZE_FILE <<EOF
1024 
EOF

cat >$CONFIG <<EOF
file-resource some/random-file.ext {
    host-path = "${TESTFILE_1K}"
}

task complete {
	on-finish { execute("echo \${FWUP_SIZE_some_random_file_ext} > \${ACTUAL_SIZE_FILE}") }
}
EOF

# Create the firmware file like normal
$FWUP_CREATE -c -v -f $CONFIG -o $FWFILE

# Apply the firmware and verify that the correct size was generated
$FWUP_APPLY --unsafe -a -d $IMGFILE -i $FWFILE -t complete
diff -w $EXPECTED_SIZE_FILE $ACTUAL_SIZE_FILE
